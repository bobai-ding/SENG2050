<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Must be logged in</web-resource-name>
			<!-- 
				the following patterns defines the resources 
				that are protected by the below auth-constraint 
			-->
			<url-pattern>/*</url-pattern>
			<!-- /* means all pages in the application -->
		</web-resource-collection>
		<auth-constraint>
			<!-- The following users can access the above resources -->
			<role-name>staff</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Must be logged in</web-resource-name>
			<!-- 
				the following patterns defines the resources 
				that are protected by the below auth-constraint 
			-->
			<url-pattern>/user/*</url-pattern>
			<!-- /* means all pages in the application -->
		</web-resource-collection>
		<auth-constraint>
			<!-- The following users can access the above resources -->
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>
	
	<login-config>
	    <auth-method>FORM</auth-method>
	    <realm-name>jdbcRealm</realm-name>
	    <form-login-config>
	        <form-login-page>/WEB-INF/jsp/login/login.jsp</form-login-page>
	        <form-error-page>/WEB-INF/jsp/login/loginError.jsp</form-error-page>
	    </form-login-config>
	</login-config>
	
	<!-- 
		The below roles should match those defined in your user database 
		(tomcat-users.xml or an actual database) 
	-->
	<security-role>
		<role-name>user</role-name>
	</security-role>
	<security-role>
		<role-name>staff</role-name>
	</security-role>
</web-app>